{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",

    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2022"],
    "typeRoots": ["./src/generated/types", "./node_modules/@types"],
    "types": [
      "googlepay"
    ]
  },

  "include": ["src/**/*.ts"]
}